<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="300dp"
            android:layout_height="550dp"
            android:layout_marginBottom="75dp"
            android:background="#BC59ED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.849"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp"
                tools:context=".MainActivity">


            <Button
                    android:text="Sushi"
                    android:layout_width="270dp"
                    android:layout_height="160dp" android:id="@+id/food0"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
            <Button
                    android:text="Burrito"
                    android:layout_width="270dp"
                    android:layout_height="160dp" android:id="@+id/food1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/food0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Coke"
                    android:layout_width="270dp"
                    android:layout_height="160dp" android:id="@+id/food2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/food1" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <Button
                    android:text="Canada Dry"
                    android:layout_width="270dp"
                    android:layout_height="160dp" android:id="@+id/food3"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/food2" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="110dp"
            android:layout_height="642dp"
            android:layout_marginTop="75dp"
            android:background="#8D59ED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp"
                tools:context=".MainActivity">

            <Button
                    android:text="Sushi"
                    android:layout_width="101dp"
                    android:layout_height="57dp" android:id="@+id/button10"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="7sp"/>
            <Button
                    android:text="Burrito"
                    android:layout_width="100dp"
                    android:id="@+id/button6"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button10" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Coke"
                    android:layout_width="100dp"
                    android:id="@+id/button7"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Burrito"
                    android:layout_width="100dp"
                    android:id="@+id/button8"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button7" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Sprite"
                    android:layout_width="100dp"
                    android:id="@+id/button9"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Sushi"
                    android:layout_width="100dp"
                    android:id="@+id/button11"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Burrito"
                    android:layout_width="100dp"
                    android:id="@+id/button12"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button11" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

            <Button
                    android:text="Coke"
                    android:layout_width="100dp"
                    android:id="@+id/button13"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/button12" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_height="60dp" android:textSize="7sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
            android:id="@+id/ViewMarket"
            android:layout_width="124dp"
            android:layout_height="65dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="11dp"
            android:text="Market"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Checkout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            app:layout_constraintVertical_bias="0.0" />

    <Button
            android:id="@+id/Checkout"
            android:layout_width="133dp"
            android:layout_height="61dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="11dp"
            android:text="Check Out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/scrollView3"
            app:layout_constraintStart_toEndOf="@+id/ViewMarket"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/FoodtruckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="239dp"
            android:layout_marginBottom="46dp"
            android:text="SushiBurrito"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="39dp"
            android:text="Cart"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FoodtruckName"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>