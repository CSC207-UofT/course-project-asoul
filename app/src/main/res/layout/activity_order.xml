<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/login_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderActivity">

    <Button
        android:text="Confirm Complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConfirmOrder"
        app:layout_constraintTop_toBottomOf="@id/orderReview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart ="30dp"/>

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackToUserInfo"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintLeft_toLeftOf="@id/ratingBar"/>
    <TextView
        android:text="Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textStyle="italic"
        android:gravity="center"
        android:id="@+id/OrderLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ScrollView
        android:id="@+id/orderReview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/OrderLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OrderDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"/>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PriceLabel"
        app:layout_constraintTop_toBottomOf="@+id/orderReview"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"/>
    <RatingBar
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:id="@+id/ratingBar"
        app:layout_constraintLeft_toLeftOf="@+id/ConfirmOrder"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmOrder"/>

    <TextView
        android:id="@+id/ErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/BackToUserInfo"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>