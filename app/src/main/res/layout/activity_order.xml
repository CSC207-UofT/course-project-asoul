<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.OrderActivity">

    <Button
            android:text="Confirm Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ConfirmOrder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="550dp"
            android:layout_marginStart ="30dp"/>

    <Button
            android:text="Rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rate"
            app:layout_constraintLeft_toRightOf="@+id/ConfirmOrder"
            app:layout_constraintTop_toTopOf="@+id/ConfirmOrder"
            android:layout_marginStart ="50dp"
           />
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackToHistory"
            app:layout_constraintTop_toBottomOf= "@+id/Rate"
            app:layout_constraintLeft_toLeftOf="@+id/Rate"
            android:layout_marginTop="20dp"
            />
    <TextView
            android:text="ORDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/OrderLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
           />
    <ScrollView
            android:layout_width="389dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@+id/OrderLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <TextView
            android:text="SB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PriceLable"
            tools:layout_editor_absoluteY="487dp"
            tools:layout_editor_absoluteX="280dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>