<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        tools:context=".RegisterActivity" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/please_provide_the_basic_information_below"
            android:textSize="28sp"
            android:typeface="monospace"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/username"
            android:textSize="22sp"
            android:textStyle="bold"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="@string/enter_your_username"
              android:gravity="center"
              android:inputType="text"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/password"
            android:textSize="22sp"
            android:textStyle="bold"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="@string/enter_your_password"
              android:gravity="center"
              android:inputType="textPassword"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/nickname"
            android:textSize="22sp"
            android:textStyle="bold"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="@string/enter_your_nickname"
              android:gravity="center"
              android:inputType="text"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/phone_num"
            android:textSize="22sp"
            android:textStyle="bold"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="@string/enter_your_phone_number_only_numbers"
              android:gravity="center"
              android:inputType="phone"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            android:layout_marginStart="155sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:text="@string/register"
            android:backgroundTint="@android:color/white"
            android:textSize="16sp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:text="@string/or_go_back_to"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="20sp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btnLoginPage"
            android:layout_marginStart="160sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:text="@string/sign_in"
            android:backgroundTint="@android:color/white"
            android:textSize="16sp"
    />
</LinearLayout>